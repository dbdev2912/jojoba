{{>admin_header}}
<div class="full_container">
   <div class="container-fluid">
      <div>

         <div class="midde_cont">
            <div class="container-fluid">

               <div class="form__header__title">
                  <p>Cập nhật dòng sản phẩm</p>
               </div>


               <form class="generic__form" method="POST" action="/admin/product/product-category/edit">
                  <div class="form-group">
                     <label for="madonvi_input">Mã đơn vị</label> 
                     <div>
                        <span style="color: #111">{{ cate.ma_dong }}</span>
                     </div>
                     <input class="d-none" name="cate_id" type="text" class="form-control" id="madonvi_input" value="{{ cate.ma_dong }}">
                  </div>
                  <div class="form-group">
                     <label for="tendonvi_input">Tên đơn vị</label>
                     <input name="cate_name" type="text" class="form-control" id="tendonvi_input" value="{{cate.ten_dong }}" required>
                  </div>
                  <div class="form-group">
                     <label for="ghichu_input">Ghi chú</label>
                     <textarea name="note" style="height: 200px" class="form-control" id="ghichu_onput">{{ cate.dsp_ghi_chu }}</textarea>

                  </div>
                  <button type="submit" class="btn btn-primary">Cập nhật</button>
               </form>


            </div>

            <!-- footer -->
         </div>

      </div>
   </div>
</div>

{{>admin_success}}

{{>admin_footer}}