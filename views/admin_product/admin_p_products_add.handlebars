{{>admin_header}}
<div class="full_container">
   <div class="container-fluid">
      <div>

         <div class="midde_cont">
            <div class="container-fluid product__add__form">

               <div class="form__header__title">
                  <p>Thêm sản phẩm mới</p>
               </div>


               <form class="generic__form" method="POST" action="/admin/product/product" enctype="multipart/form-data">
                  <div class="row ">

                     <div class="col-6">
                        <div class="form__side__part">

                           <div class="form-group">
                              <label for="madonvi_input">Mã sản phẩm</label> {{#if existed }}<span class="form__error__text">Mã sản phẩm này đã tồn tại</span>{{/if }}
                              <input name="product_id" type="text" class="form-control" id="" required>
                           </div>
                           <div class="form-group">
                              <label for="tendonvi_input">Tên sản phẩm</label>
                              <input name="product_name" type="text" class="form-control" id="" required>
                           </div>


                           <div class="form-group">
                              <label for="dong_input">Thuộc dòng sản phẩm</label>{{#if fkconflict }}<span class="form__error__text">Dòng sản phẩm không tồn tại hoặc đã bị xóa.</span>{{/if }}
                              <select name="cate_id" class="form-select form-control"  id="cates" required>
                                 {{#each cates}}
                                    <option value="{{ ma_dong }}" >{{ma_dong}} - {{ ten_dong }}</option>
                                 {{/each}}
                              </select>
                           </div>

                           <div class="form-group">
                              <label for="loai_input">Thuộc loại sản phẩm</label>{{#if fkconflict }}<span class="form__error__text">Loại sản phẩm không tồn tại hoặc đã bị xóa.</span>{{/if }}
                              <select name="type_id" class="form-select form-control"  id="types" required>
                                 {{!-- <option value="" >{{ma_loai}} - {{ ten_loai }}</option> --}}
                              </select>
                           </div>

                           <div class="form-group">
                              <label for="nhom_input">Thuộc nhóm sản phẩm</label>{{#if fkconflict }}<span class="form__error__text">Nhóm sản phẩm không tồn tại hoặc đã bị xóa.</span>{{/if }}
                              <select name="group_id" class="form-select form-control"  id="groups" required>
                                 {{!-- <option value="" >{{ma_loai}} - {{ ten_loai }}</option> --}}
                              </select>
                           </div>


                           <div class="form-group">
                              <label for="dong_input">Đơn vị tính</label>{{#if fkconflict }}<span class="form__error__text">Đơn vị tính không tồn tại hoặc đã bị xóa</span>{{/if }}
                              <select name="unit_id" class="form-select form-control"  id="" required>
                                 {{#each units}}
                                    <option value="{{ ma_don_vi }}" >{{ma_don_vi}} - {{ ten_don_vi }}</option>
                                 {{/each}}
                              </select>
                           </div>

                           <div class="form-group">
                              <label for="tendonvi_input">Giá</label>
                              <input name="price" type="number" class="form-control" id="" required>
                           </div>

                           <div class="form-group">
                              <label for="dong_input">Sản phẩm mới</label>{{#if fkconflict }}<span class="form__error__text">Đơn vị tính không tồn tại hoặc đã bị xóa</span>{{/if }}
                              <select name="is_new" class="form-select form-control"  id="" required>
                                 <option value="true">Mới</option>
                                 <option value="false">Không</option>
                              </select>
                           </div>

                           <div class="form-group row">
                              <div class="col-6">
                                 <label for="nhom_input">Giảm giá</label>{{#if fkconflict }}<span class="form__error__text">Nhóm sản phẩm không tồn tại hoặc đã bị xóa.</span>{{/if }}
                                 <select name="is_for_sale" class="form-select form-control"  id="" required>
                                    <option value="true">Giảm giá</option>
                                    <option value="false">Không</option>
                                 </select>
                              </div>
                              <div class="col-6">
                                 <label for="tendonvi_input">%</label>
                                 <input name="sale_percentage" type="number" class="form-control" id="" required>
                              </div>
                           </div>

                           <div class="form-group">
                              <label for="dong_input">Thương hiệu</label>{{#if fkconflict }}<span class="form__error__text">Thương hiệu không tồn tại hoặc đã bị xóa</span>{{/if }}
                              <select name="brand_id" class="form-select form-control"  id="" required>
                                 {{#each brands}}
                                    <option value="{{ ma_thuong_hieu }}" >{{ma_thuong_hieu}} - {{ ten_thuong_hieu }}</option>
                                 {{/each}}
                              </select>
                           </div>

                           <div class="form-group">
                              <label for="dong_input">Trạng thái</label>
                              <select name="in_stock" class="form-select form-control"  id="" required>
                                 <option value="true">Còn hàng</option>
                                 <option value="false">Hết hàng</option>
                              </select>
                           </div>

                           <div class="form-group">
                              <label for="ghichu_input">Giới thiệu</label>
                              <textarea name="introducing" style="height: 200px" class="form-control" id=""></textarea>
                           </div>

                            <div class="form-group">
                              <label for="mota_input">Mô tả</label>
                              <textarea name="description" style="height: 200px" class="form-control" id=""></textarea>
                           </div>

                           <div class="form-group">
                              <label for="mota_input">Thông số kĩ thuật</label>
                              <textarea name="technical" style="height: 200px" class="form-control" id=""></textarea>
                           </div>
                        </div>


                     </div>

                     <div class="col-6">

                        <div class="form-group brand-preview">
                           <label for="">Hình ảnh</label>
                           <div class="preview-box">
                              <img id="preview-img" style="display: none" class="preview-img" src="/assets/brands/jojoba.png" alt="">
                              <div id="preview-btn" class="brand-img-btn">Chọn file</div>
                              <input name="product_image" id="preview-file-input" type="file" class="d-none" accept="image/*">
                           </div>
                        </div>

                        <div class="form-group technical-preview">
                           <label for="">Hình ảnh khác</label>
                           <div class="preview-box preview-tech-image">
                              <div class="row preview-tech-img" style="display: none" id="tech-images">
                                 
                                 {{!-- <div class="tech-img">
                                    <img class="preview-img" src="/assets/brands/jojoba.png" alt="">
                                 </div> --}}
                                 
                              </div>
                              <div id="tech-preview-btn"  class="brand-img-btn">Chọn file</div>
                              <input name="technical_images" id="preview-tech-file-input" type="file" class="d-none" accept="image/*" multiple>
                           </div>
                        </div>

                     </div>


                  </div>
                  <button type="submit" class="btn btn-primary">Thêm</button>
               </form>


            </div>

            <!-- footer -->
         </div>

      </div>
   </div>
</div>

<script src="/admin/js/admin.product.js"></script>

{{>admin_success}}

{{>admin_footer}}