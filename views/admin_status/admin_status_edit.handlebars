{{>admin_header}}
<div class="full_container">
   <div class="container-fluid">
      <div>

         <div class="midde_cont">
            <div class="container-fluid">


               <div class="row">
                  <div class="w-100">
                     <div class="form__header__title">
                        <p>Cập nhật trạng thái</p>
                     </div>
                  </div>
                  <form class="generic__form" method="POST" action="/admin/status/edit">

                    <div class="form-group">
                        <label for="madonvi_input">Mã trạng thái</label> 
                        <div>
                           <span style="color: #111">{{status.ma_trang_thai}}</span>
                        </div>
                        <input class="d-none" name="status_id" type="text" class="form-control" id="madonvi_input" value="{{ status.ma_trang_thai }}">
                     </div>


                     <div class="form-group">
                        <label for="tendonvi_input">Tên trạng thái</label>
                        <input name="status_name" type="text" class="form-control" value="{{ status.ten_trang_thai }}" required>
                     </div>
                     <div class="form-group form-check">
                        {{#if status.mac_dinh}}
                           <input name="is_default" type="checkbox" class="form-check-input" checked>
                        {{else}}
                           <input name="is_default" type="checkbox" class="form-check-input">
                        {{/if}}
                        <label class="form-check-label" for="">Trạng thái mặc định</label>
                     </div>
                     <div class="form-group">
                        <label for="ghichu_input">Ghi chú</label>
                        <textarea name="note" style="height: 200px" class="form-control">{{ status.ghi_chu }}</textarea>
                     </div>
                     <button type="submit" class="btn btn-primary">Cập nhật</button>
                  </form>
                  
               </div>


            </div>

            <!-- footer -->
         </div>

      </div>
   </div>
</div>

<script src="/admin/js/brands.js"></script>

{{>admin_success}}

{{>admin_footer}}