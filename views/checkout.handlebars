{{> header }}
{{> breadcrumb }}


<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6 class="coupon__link">
                    {{!-- <span class="icon_tag_alt"></span> --}}
                    {{!-- <a href="#">Have a coupon?</a> Click
                    here to enter your code.</h6> --}}
            </div>
        </div>
        <form action="/u/checkout" class="checkout__form" method="POST">
            <div class="row">
                <div class="col-lg-8">
                    <h5>CHI TIẾT ĐƠN HÀNG</h5>
                    <div class="row">                        
                        <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Họ<span>*</span></p>
                                    {{#if auth }}
                                    <input type="text" name="firstname" value="{{ auth.ho }}">
                                    {{else}}
                                    <input type="text" name="firstname">
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Tên <span>*</span></p>
                                    {{#if auth}}
                                    <input type="text" name="lastname" value="{{ auth.ten }}">
                                    {{else}}
                                    <input type="text" name="lastname">
                                    {{/if}}
                                </div>
                            </div>
                        <div class="col-lg-12">
                            {{!-- <div class="checkout__form__input">
                                <p>Quốc gia <span>*</span></p>
                                <input type="text" value="Việt Nam">
                            </div> --}}

                            <div class="checkout__form__input">
                                <p>Tỉnh / Thành phố <span>*</span></p>
                                <select id="provices" class="form-select form-control form__control__select"
                                    name="province" id="">

                                </select>
                            </div>
                            <div class="checkout__form__input">
                                <p>Quận / Huyện <span>*</span></p>
                                <select id="districts" class="form-select form-control form__control__select"
                                    name="district" id="">

                                </select>
                            </div>

                            <div class="checkout__form__input">
                                <p>Xã / Phường / Thị Trấn <span>*</span></p>
                                <select id="wards" class="form-select form-control form__control__select" name="ward"
                                    id="">

                                </select>
                            </div>
                            <div class="checkout__form__input">
                                <p>Địa chỉ <span>*</span></p>
                                {{#if auth}}
                                <input type="text" name="address" placeholder="Đường & Số nhà"  value="{{auth.dia_chi}}">
                                {{else}}
                                <input type="text" name="address" placeholder="Đường & Số nhà">
                                {{/if}}
                            </div>

                            <div class="checkout__form__input">
                                <p>Ghi chú</p>
                                <input type="text" name="note" placeholder="VD: Hàng dễ vỡ, lối đi phù hợp, ... ">
                            </div>                          
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Di động <span>*</span></p>
                                {{#if auth }}
                                <input name="phone" type="text" value="{{auth.so_dien_thoai}}">
                                {{else}}
                                <input name="phone" type="text">
                                {{/if}}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email <span>*</span> {{#if existed }}<span class="form__error__text">Email này đã được dùng để tạo tài khoản!</span>{{/if }}</p>
                                {{#if auth}}
                                <span class="false__input">{{auth.ten_dang_nhap}}</span>
                                <input style="display:none" name="email" type="text" value="{{auth.ten_dang_nhap}}">
                                {{else}}
                                <input name="email" type="text">
                                {{/if}}
                            </div>
                        </div>
                        {{#unless auth }}
                        <div class="col-lg-12">
                            <div class="checkout__form__checkbox">
                                <label for="acc">
                                    Tạo tài khoản ?
                                    <input type="checkbox" id="acc" name="create_account">
                                    <span class="checkmark"></span>
                                </label>
                                <p>Tạo một tài khoản bằng cách nhập thông tin dưới đây. Nếu bạn là khách hàng cũ,
                                    <br />hãy đăng nhập ở đầu trang. Username của bạn cũng chính là <b>Email bạn đã nhập ở trên</b> !!
                                    <br /> Bằng việc tạo tài khoản, bạn có thể theo dõi đơn hàng của mình bất cứ khi nào mong muốn.
                                </p>
                            </div>
                            <div class="checkout__form__input">
                                <p>Mật khẩu<span>*</span> {{#if pwd }}<span class="form__error__text">Không để trống trường này!!</span>{{/if }} </p>
                                <input type="password" name="password">
                            </div>


                        </div>
                        {{/unless}}
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Đơn hàng của bạn</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Tổng</span>
                                </li>

                                {{#each cart}}
                                <li>
                                    <p>{{#add @index 1 }}{{/add}}. {{ product_name }} x {{quantity}}</p><span>
                                        {{#formatPrice subtotal}}{{/formatPrice}}</span>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Tổng đơn <span> {{#formatPrice total}}{{/formatPrice}} </span></li>
                                <li class="text-right"><small><i>Đã bao gồm VAT</i></small></li>
                            </ul>
                        </div>

                        <div class="checkout__order__total">
                            <ul>
                                <li>Phí vận chuyển <span>{{#formatPrice 0}}{{/formatPrice}}</span> </li>
                                <li>
                                    <p>Miễn phí vận chuyển trong nội thành Cần Thơ với đơn hàng trên <i>{{#formatPrice
                                            500000}}{{/formatPrice}}</i></p>
                                </li>
                                <li>
                                    <p>Chi phí vận chuyển sẽ có sự khác biệt giữa các tỉnh. Tối đa <i>{{#formatPrice
                                            330000}}{{/formatPrice}}</i> với kiện hàng 60kg</p>
                                </li>
                            </ul>
                        </div>

                        <button type="submit" class="site-btn">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<script src="/js/provinces.js"></script>
{{> footer }}