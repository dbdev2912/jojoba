  <section class="trend span">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4">
          <div class="section-title">
            <p class="section__title__content">Các thương hiệu</h4>
          </div>
        </div>
      </div>
      <div class="row brands">
        {{#each brands }}
        <div class="brand">
          <a class="brand__bg" href="/products/brand/{{ ma_thuong_hieu }}"
            style="background-image: url({{ logo }});"></a>
          <h6>{{ ten_thuong_hieu }}</h6>
        </div>
        {{/each}}
      </div>
    </div>
  </section>


  <section class="trend spad">
    <div class="container">
      <div class="row">

        {{#each trending }}

        <div class="col-lg-4 col-md-4 col-sm-6">
          <div class="trend__content">
            <div class="section-title">
              <p class="section__title__content">{{ title }}</p>
            </div>
            {{#each items }}
            <a href="/products/p/{{ product_id }}">
              <div class="trend__item">
                <div class="trend__item__pic"><img class="trend__item__image" src={{ image }}
                    alt="{{ product_id }} - {{ product_name }}"></div>
                <div class="trend__item__text">
                  <h6>{{ product_name }}</h6>
                  <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i
                      class="fa fa-star"></i><i class="fa fa-star"></i></div>
                  <div class="product__price"> {{#formatPrice price }}{{/formatPrice }}</div>
                </div>
              </div>
            </a>
            {{/each }}

          </div>
        </div>
        {{/each }}

      </div>
    </div>
  </section>
