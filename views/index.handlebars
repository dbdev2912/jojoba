                style="background-image: url(&quot;img/categories/category-5.jpg&quot;);">
                <div class="categories__text">
                  <h4>Các sản phẩm khác</h4>
                  <p>{{ cateCounts.tbk }} sản phẩm</p><a href="/products/cate/thiet-bi-khac">Mua sắm ngay</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="product spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4">
          <div class="section-title">
            <p class="section__title__content">sản phẩm mới</h4>
          </div>
        </div>
        <div class="col-lg-8 col-md-8">
          <ul class="filter__controls">
            {{!-- <li class="active" data-filter="all">Tất cả</li> --}}
            {{#each hotProductOptions}}
            <li data-filter="{{ name }}">{{ label }}</li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="product__gallary" style="display: block" id="all">
        <div class="row property__gallery">
          {{#each products }}
          {{#product this}}
          {{/product}}
          {{/each}}
        </div>
      </div>
      {{#each hotProductOptions}}
      <div class="product__gallary" id="{{ name }}" style="display: none">
        <div class="row property__gallery">
          {{#each this.products }}
          {{#product this}}
          {{/product}}
          {{/each}}
        </div>
      </div>
      {{/each}}
    </div>
  </section>


