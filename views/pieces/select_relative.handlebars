<div class="modal fade" id="myModal">
    <div class="modal-dialog select__relative__modal">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">CHỌN SẢN PHẨM LIÊN QUAN</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-4">
                        <label for="">Dòng sản phẩm</label>
                        <select id="rel__cate" class="form-control">
                            <option value="*">Tất cả</option>
                            {{#each cates }}
                                <option value="{{ma_dong}}">{{ten_dong}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-4">
                        <label for="">Loại sản phẩm</label>
                        <select id="rel__type" class="form-control"></select>                    
                    </div>
                    
                    <div class="col-4">
                        <label for="">Nhóm sản phẩm</label>
                        <select id="rel__group" class="form-control"></select>
                    </div>

                </div>
                <div class="row rel__products" id="rel__products">
                    {{!-- {{#each products }}
                        <div class="col-2 rel__product__card">
                            <div class="rel__product_img">
                                <img src="{{ image }}" alt="">
                            </div>
                            <div class="rel__product__content">
                                <h6>{{ product_id }}</h6>
                                <p>{{ product_name }}</p>
                            </div>
                        </div>
                    {{/each}} --}}
                </div>
                


                <div class="row rel__paginate" >

                    <div class="col-lg-12 text-right">
                        <div class="pagination__option">
                            <a id="first"><i class="fa fa-angle-double-left"></i></a>
                            {{!-- <a class="paginate__trigger" value="-1" style=""><i class="fa fa-angle-left"></i></a> --}}

                            <a class="paginate__trigger" value="-1" id="p_1">1</a>
                            <a class="paginate__trigger" value="0" id="p_2" class="active">1</a>
                            <a class="paginate__trigger" value="1" id="p_3">2</a>

                            {{!-- <a class="paginate__trigger" value="1" ><i class="fa fa-angle-right"></i></a> --}}
                            <a id="last"><i class="fa fa-angle-double-right"></i></a>
                        </div>
                    </div>

                </div>



            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button id="modal-canceler" type="button" id="submit-relative" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/admin/js/select_relative.js"></script>