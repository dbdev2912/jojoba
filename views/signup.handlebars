<link rel="stylesheet" href="/css/login.css">

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section"></h2>
            </div>
        </div>
        <div class="row justify-content-center" style="padding: 1em">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img login-bg">
                        <img src="/img/bg/login.jpg" alt="">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Đăng ký</h3>
                            </div>

                        </div>
                        <form action="/api/u/signup" method="POST" class="signin-form">
                            <div class="form-group mb-3">
                                <label class="label" for="name">Email</label>
                                {{#if email }}
                                    <i class="error">Email này đã được sử dụng cho một tài khoản khác.</i>
                                {{/if}}
                                <input type="text" name="username" class="form-control" placeholder="example@email.com" required="">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Mật khẩu</label>
                                 {{#if pwd }}
                                    <i class="error">Mật khẩu phải có độ dài trong khoảng 6 - 48 ký tự</i>
                                {{/if}}
                                <input type="password" name="password" class="form-control" placeholder="******" required="">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Nhập lại mật khẩu</label>
                                {{#if reenter }}
                                    <i class="error">Lặp lại mật khẩu không khớp</i>
                                {{/if}}
                                <input type="password" name="reenter" class="form-control" placeholder="******" required="">
                            </div>

                            <div class=" form-group row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="checkout__form__input">
                                        <label class="label" for="password">Họ & chữ lót</label>
                                        <input name="firstname" class="form-control" type="text" required="">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="checkout__form__input">
                                        <label class="label" for="password">Tên</label>
                                        <input name="lastname" class="form-control" type="text" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="name">Số di động</label>
                                {{#if phone }}
                                    <i class="error">Số điện thoại này đã được sử dụng cho một tài khoản khác</i>
                                {{/if}}
                                <input type="text" name="phone" class="form-control" placeholder="+84 0000-0000" required="">
                            </div>                           

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Đăng ký ngay</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">Ghi nhớ đăng nhập
                                        <input type="checkbox" checked="">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Quên mật khẩu</a>
                                </div>
                            </div>
                        </form>
                        <p class="text-center">Đã có tài khoản <a href="/u/login">Đăng nhập
                                ngay</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>